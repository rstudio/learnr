{
  "name": "learnr",
  "private": true,
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "build": "npm run build:tutorial-js && npm run build:tutorial-i18n && npm run build:tutorial-format && npm run build:esbuild",
    "build:tutorial-js": "babel learnr-js/tutorial -d inst/lib/tutorial",
    "build:tutorial-i18n": "babel learnr-js/i18n -d inst/lib/i18n",
    "build:tutorial-format": "babel learnr-js/format -d inst/rmarkdown/templates/tutorial/resources",
    "build:esbuild": "node learnr-js/build.js",
    "lint": "standard --fix learnr-js"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "browserslist": "^4.19.1",
    "core-js": "^3.21.0",
    "esbuild": "^0.14.18",
    "esbuild-plugin-babel": "https://github.com/schloerke/esbuild-plugin-babel#patch-2",
    "standard": "^16.0.4"
  }
}
